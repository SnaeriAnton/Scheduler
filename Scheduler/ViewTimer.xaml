<Window x:Class="Scheduler.ViewTimer"
        x:Name="viewTimerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Scheduler"
        mc:Ignorable="d"
        MaxWidth="250" MinWidth="250" Width="250" MaxHeight="150" MinHeight="150" Height="150"
        ResizeMode="NoResize"
        Topmost="true">
    <Grid Background="#ffdadada">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Border Margin="1" Background="White" CornerRadius="10" Grid.Column="0" Grid.Row="0">
            <TextBlock x:Name="timerView" Foreground="red" Text="00:00:00" FontSize="50" FontWeight="Bold" Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <Border Margin="1" Background="White" CornerRadius="5" Grid.Column="0" Grid.Row="1">
            <TextBlock x:Name="textTask" FontSize="13" FontWeight="Bold" Margin="2" VerticalAlignment="Center" TextWrapping="Wrap"/>
        </Border>
    </Grid>
</Window>
